# Build stage
FROM mcr.microsoft.com/dotnet/sdk:6.0.101 AS build
WORKDIR /app

# Copy only the necessary files for restoring dependencies
COPY *.sln .
COPY API/API.csproj ./

# Run dotnet restore for the project
RUN dotnet restore

# Copy the entire project and build it
COPY . ./
RUN dotnet publish API.csproj -c Release -o out

# Build runtime image
FROM mcr.microsoft.com/dotnet/aspnet:6.0
WORKDIR /app
COPY --from=build /out ./
ENTRYPOINT ["dotnet", "API.dll"]